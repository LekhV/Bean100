<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorBlue</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/avenirroman</item>

    </style>

    <style name="colorsToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorWhite</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColorSecondary">@color/colorBlack</item>
        <item name="android:textColor">#2dbbd2</item>
        <item name="android:textAllCaps">false</item>
        <item name="actionMenuTextColor">#2dbbd2</item>
        <item name="android:actionMenuTextColor">#2dbbd2</item>
        <item name="android:fontFamily">@font/avenirroman</item>
    </style>

    <style name="colorsNavigator" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:fontFamily">@font/avenirroman</item>
    </style>

    <style name="MyTabLayoutTextAppearance">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/avenirroman</item>

    </style>

</resources>