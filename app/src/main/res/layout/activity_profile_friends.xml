<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activitys.ActivityProfileFriends">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_viewimageViewGrayNM1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="56dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/GRAYBeans"
            app:cardCornerRadius="50dp"
            app:cardElevation="5dp">


            <ImageView
                android:id="@+id/imageViewGrayPhotoNM"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/big" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginRight="120dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewXXPhotoProfileNM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="right"
                    android:text="32"
                    android:textColor="@color/colorBlue"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textViewPhotoProfileNM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Photos"
                    android:textColor="@color/colorGrayWordsSet" />

                <TextView
                    android:id="@+id/textViewXXConnectionsProfileNM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/imageViewGrayPhotoNM"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="26dp"
                    android:text="32"
                    android:textColor="@color/colorXXConnections"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textViewConnectionsProfileNM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Connections"
                    android:textColor="@color/colorGrayWordsSet" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:layout_marginTop="-28dp"
                android:layout_marginLeft="100dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewXXEventsProfileNM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"

                    android:layout_marginTop="50dp"
                    android:text="12"
                    android:textColor="@color/colorXXEvents"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/textViewEventsProfileNM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Events"
                    android:textColor="@color/colorGrayWordsSet" />


                <TextView
                    android:id="@+id/textViewXXBeansProfileNM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginTop="26dp"
                    android:text="12"
                    android:textColor="@color/colorXXBeans"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/textViewBeansProfileNM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"

                    android:text="Beans"
                    android:textColor="@color/colorGrayWordsSet" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewNameProfileNM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageViewGrayPhotoNM"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="170dp"
                android:text="Peter Clarckson"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorBlackText"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewStatusProfileNM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewNameProfileNM"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="196dp"
                android:layout_gravity="center_horizontal"
                android:text="Lorem ipsum dolor sit amethgt"
                android:textColor="@color/colorGrayWordsSet"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:textSize="18dp"
                android:textStyle="italic" />

        </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayoutBurronProfileNM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_viewimageViewGrayNM1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonPostsPrNM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:text="Posts"
            android:textSize="20dp" />

        <Button
            android:id="@+id/buttonBeansPrNM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:text="Beans"
            android:textColor="@android:color/darker_gray"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <Button
                android:id="@+id/buttonplusProfileNM"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_follow"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/buttonplusProfileNMUnfollow"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/btn_unfollow" />

        </LinearLayout>

    </LinearLayout>
        <FrameLayout
            android:id="@+id/fragmentContainerProfileMeNM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLayoutBurronProfileNM">

        </FrameLayout>

    </RelativeLayout>