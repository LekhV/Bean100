            android:layout_alignParentLeft="true"

            android:layout_marginTop="112dp"
            android:layout_marginLeft="49dp"
            android:background="@null"
            android:inputType="text"
            android:textSize="14dp"
            android:hint="Add a comment..." />



    </RelativeLayout>

    />

