<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageViewMacaroons"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        app:srcCompat="@drawable/makarons" />

    <TextView
        android:id="@+id/textViewMacaroons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="21dp"
        android:layout_marginTop="265dp"
        android:text="Macaroons"
        android:textColor="@color/colorBlue"

        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewfrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="154dp"
        android:layout_marginTop="270dp"
        android:text="from" />


    <TextView
        android:id="@+id/textViewTimeOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="191dp"
        android:layout_marginTop="265dp"
        android:text="10.09"
        android:textColor="@color/colorBlackText"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="243dp"
        android:layout_marginTop="270dp"
        android:text="to" />


    <TextView
        android:id="@+id/textViewTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="264dp"
        android:layout_marginTop="265dp"
        android:text="30.09"
        android:textColor="@color/colorBlackText"
        android:textSize="18dp" />


</RelativeLayout>