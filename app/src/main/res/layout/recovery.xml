<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

    <TextView
        android:id="@+id/textViewRecovery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="?attr/actionBarSize"
        android:textSize="16sp"
        android:text="Forgot your password? This happens1 No worries, we will help you with recovery. Type below your email used to sign in to Bean" />

    <TextView
        android:id="@+id/textViewEmailIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewRecovery"
        android:layout_marginTop="50dp"
        android:text="YOUR EMAIL"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/editTextEmailIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textViewEmailIn"
        android:background="@null"
        android:inputType="textEmailAddress"
        android:hint="beanmaster@yahoo.com"
        android:textSize="17sp" />

    <Button
        android:id="@+id/imageButtonSignIn"
        android:layout_width="320dp"
        android:layout_height="48dp"

        android:layout_below="@+id/editTextEmailIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/button_reset_my_password"
        android:text="Reset my Password"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="17sp" />

    </RelativeLayout>
</RelativeLayout>