<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.ActivityNotificationSettings">
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewswitchTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="75dp"

        android:text="Turn On All Notification"
        android:textColor="@color/colorGrayWordsSet"
        android:textSize="18dp" />

    <Switch
        android:id="@+id/switchTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_below="@id/textViewswitchTurn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-26dp"  />


    <TextView
        android:id="@+id/textViewswitchFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="125dp"

        android:text="Friends joining your events"
        android:textColor="@color/colorGrayWordsSet"
        android:textSize="18dp" />

    <Switch
        android:id="@+id/switchFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_below="@id/textViewswitchFriends"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-26dp"  />

    <TextView
        android:id="@+id/textViewswitchPeople"
        android:layout_width="300dp"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="175dp"

        android:text="People starting to follow your  business"
        android:textColor="@color/colorGrayWordsSet"
        android:textSize="18dp" />

    <Switch
        android:id="@+id/switchPeople"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_below="@id/textViewswitchPeople"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-40dp"

/>


</RelativeLayout>