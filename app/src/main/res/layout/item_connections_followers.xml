<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

    <ImageView
        android:id="@+id/imageViewIconSGreen"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/one" />

    <ImageView
        android:id="@+id/imageViewIconGreen"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginRight="28dp"
        app:srcCompat="@drawable/green_icons" />

    <TextView
        android:id="@+id/textViewIconNameGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="3dp"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewIconEmailGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewIconSGreen"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:text="TextView" />
</RelativeLayout>