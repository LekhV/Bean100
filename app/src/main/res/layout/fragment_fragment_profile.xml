<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/card_viewimageViewGray1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/GRAYBeans"
        app:cardCornerRadius="50dp"
        app:cardElevation="5dp">


        <ImageView
            android:id="@+id/imageViewGrayPhoto"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/big" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:layout_marginRight="120dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewXXPhotoProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="right"
                android:text="32"
                android:textColor="@color/colorBlue"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textViewPhotoProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Photos"
                android:textColor="@color/colorGrayWordsSet" />

            <TextView
                android:id="@+id/textViewXXConnectionsProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageViewGrayPhoto"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginTop="26dp"
                android:text="32"
                android:textColor="@color/colorXXConnections"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textViewConnectionsProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Connections"
                android:textColor="@color/colorGrayWordsSet" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_marginTop="-28dp"
            android:layout_marginLeft="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewXXEventsProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:layout_marginTop="50dp"
                android:text="12"
                android:textColor="@color/colorXXEvents"
                android:textSize="18dp" />


            <TextView
                android:id="@+id/textViewEventsProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Events"
                android:textColor="@color/colorGrayWordsSet" />


            <TextView
                android:id="@+id/textViewXXBeansProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="26dp"
                android:text="12"
                android:textColor="@color/colorXXBeans"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textViewBeansProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"

                android:text="Beans"
                android:textColor="@color/colorGrayWordsSet" />
        </LinearLayout>

        <TextView
            android:id="@+id/textViewNameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageViewGrayPhoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="170dp"
            android:text="Peter Clarckson"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorBlackText"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewStatusProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNameProfile"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="196dp"
            android:layout_gravity="center_horizontal"
            android:text="Lorem ipsum dolor sit amethgt"
            android:textColor="@color/colorGrayWordsSet"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="18dp"
            android:textStyle="italic" />

    </android.support.v7.widget.CardView>
   <LinearLayout
       android:id="@+id/linearLayoutBurronProfile"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="right"
       android:layout_below="@+id/card_viewimageViewGray1"
       android:orientation="horizontal">

       <Button
           android:id="@+id/buttonPostsPr"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@null"
           android:textSize="20dp"
           android:layout_marginLeft="10dp"
           android:text="Posts" />

       <Button
           android:id="@+id/buttonBeansPr"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@null"
           android:layout_marginLeft="10dp"
           android:textColor="@android:color/darker_gray"
           android:text="Beans"
           android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
       <Button
           android:id="@+id/buttonplusProfile"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:background="@drawable/plus_profile"   />
    </LinearLayout>

</LinearLayout>
    <FrameLayout
        android:id="@+id/fragmentContainerProfileMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayoutBurronProfile">

    </FrameLayout>

</RelativeLayout>