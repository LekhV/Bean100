<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonC"
        android:layout_width="340dp"
        android:layout_height="172dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:paddingTop="64dp"
        android:background="@drawable/new_business2"
        android:drawableTop="@mipmap/ic_launcher_new_businessb"
        android:gravity="center_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="270dp"
        android:orientation="vertical">


    <TextView
        android:id="@+id/textViewTitleC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"

        android:text="TITLE"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/editTextTitleC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:background="@null"

        android:hint="title"
        android:inputType="text"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewDateC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/textViewTitleC"
        android:layout_alignStart="@+id/textViewTitleC"

        android:layout_alignLeft="@+id/textViewTitleC"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:text="DATE"
        android:textSize="14dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

    <EditText
        android:id="@+id/editTextFromC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:hint="from"
        android:inputType="text"
        android:textSize="18dp" />

            <EditText
                android:id="@+id/editTexttoC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="96dp"
                android:layout_marginTop="16dp"
                android:background="@null"
                android:hint="to"
                android:inputType="text"
                android:textSize="18dp" />
    </LinearLayout>
        <TextView
            android:id="@+id/textViewTellEventC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAllCaps="true"
            android:text="description"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/textEdittoTellEventC"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/item_enter"
            android:hint="Tell people more about your event"
            android:inputType="text"
            android:textSize="14dp"
            android:layout_marginRight="20dp"
            android:gravity="clip_horizontal"/>
    </LinearLayout>
</RelativeLayout>