<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"
    android:layout_margin="17dp">


    <TextView
        android:id="@+id/textMyBusinessname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:textSize="15dp"
        android:layout_marginTop="265dp"
        android:text="My Business Name " />

    <TextView
        android:id="@+id/textViewWorkingschedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textMyBusinessname"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="225dp"
        android:text="Working schedule" />

    <TextView
        android:id="@+id/textViewWorkinghours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="201dp"
        android:text="Working hours" />

    <TextView
        android:id="@+id/textViewAllDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewWorkingschedule"
        android:layout_alignParentEnd="true"
        android:text="All Days"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/textViewAMPM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textViewWorkinghours"
        android:layout_alignParentEnd="true"
        android:text="10 AM - 7 PM"
        android:layout_alignParentRight="true" />
</RelativeLayout>