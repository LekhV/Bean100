<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="?attr/actionBarSize"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <Button
                android:id="@+id/buttonNewEvent"
                android:layout_width="340dp"
                android:layout_height="172dp"
                android:layout_marginRight="4dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:paddingTop="64dp"
                android:background="@drawable/new_business2"
                android:drawableTop="@mipmap/ic_launcher_new_businessb"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/textViewTitleNewEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:text="TITLE"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/editTextTitleNewEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/textViewLastName"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:layout_marginTop="16dp"
                android:background="@null"
                android:hint="title"
                android:inputType="text"
                android:textSize="18dp"
                android:imeOptions="actionDone"/>

            <TextView
                android:id="@+id/textViewLocationNewEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/textViewTitle"
                android:layout_alignStart="@+id/textViewTitle"

                android:layout_alignLeft="@+id/textViewTitle"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:layout_marginTop="30dp"
                android:text="LOCATION"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/editTextLocationNewEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_below="@+id/textViewLastName"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:layout_marginTop="16dp"
                android:background="@null"
                android:hint="location"
                android:inputType="text"
                android:textSize="18dp"
                android:imeOptions="actionDone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewDateNewEvent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"

                        android:text="DATE"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/textEditDateNewEvent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="20dp"
                        android:background="@null"

                        android:hint="date"
                        android:inputType="text"
                        android:textSize="18dp"
                        android:imeOptions="actionDone"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewTimeNewEvent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TIME"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/textEditTimeNewEvent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="20dp"
                        android:background="@null"

                        android:hint="time"
                        android:inputType="text"
                        android:textSize="18dp"
                        android:imeOptions="actionDone"/>



                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/textViewTellNewEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAllCaps="true"
                android:text="Event Overview and description"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/textEdittoTellNewEvent"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/item_enter"
                android:gravity="clip_horizontal"
                android:hint="Tell people more about your event"
                android:imeOptions="actionDone"
                android:textSize="14dp" />

            <Switch
                android:id="@+id/switchNewEvent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editTextViewPasConfirmEdit"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:checked="true"
                android:text="Private account"
                android:textColor="@color/colorGrayWordsSet"
                android:textSize="20dp" />
        </LinearLayout>


    </ScrollView>

</RelativeLayout>