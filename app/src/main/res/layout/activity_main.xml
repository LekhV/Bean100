<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/new_star" />

    <ImageView
        android:id="@+id/imageSignIn"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />


    <Button
        android:id="@+id/buttonConnectEmail"
        android:layout_width="320dp"
        android:layout_height="48dp"

        android:layout_above="@+id/buttonConnectLinkedIn"
        android:layout_alignLeft="@+id/buttonConnectLinkedIn"
        android:layout_alignStart="@+id/buttonConnectLinkedIn"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_connect_email"
        android:onClick="onClick"
        android:paddingLeft="50dp"
        android:drawableLeft="@mipmap/ic_launcher_icon_email"
        android:layout_gravity="center"
        android:gravity="center_vertical"

        android:text="Connect with Email"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="17sp" />


    <Button
        android:id="@+id/buttonConnectLinkedIn"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_above="@+id/buttonConnectFacebook"
        android:layout_alignLeft="@+id/buttonConnectFacebook"
        android:layout_alignStart="@+id/buttonConnectFacebook"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_connect_linkedin"
        android:onClick="onClick"
        android:paddingLeft="50dp"
        android:drawableLeft="@mipmap/ic_launcher_icon_linkedin"
        android:layout_gravity="center"
        android:gravity="center_vertical"

        android:text="Connect with LinkedIn"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="17sp" />

    <Button
        android:id="@+id/buttonConnectFacebook"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:background="@drawable/image_business"
        android:text="Connect with Facebook"
        android:onClick="onClick"
        android:paddingLeft="50dp"
        android:drawableLeft="@mipmap/ic_launcher_icon_facebook"
        android:layout_gravity="center"
        android:gravity="center_vertical"

        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="17sp" />


</RelativeLayout>